<div class="col-md-4">
<div class="card mb-4 box-shadow">
        <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %> 
    <div class="card-body">
    <p class="card-text">
        <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)%>
        <span><%= portfolio_item.subtitle%></span>
    </p>
    <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
        <button type="button" class="btn btn-sm btn-outline-secondary">
         <%= link_to "View", portfolio_show_path(portfolio_item)%>
        </button>
        <% if logged_in?(:site_admin) %>
        <button type="button" class="btn btn-sm btn-outline-secondary">
             <%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
        </button>
        <% end %>
        </div>
        <small class="text-muted">9 mins</small>
    </div>
    </div>
</div>
</div>


